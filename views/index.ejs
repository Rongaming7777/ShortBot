<!Doctype html>
<html>

<head>
  <title>ShortBot Discord Login</title>
  <script>
    if (window.opener) {
      window.onunload = refreshParent;
      function refreshParent() {
        window.opener.location.reload();
      }
      window.close()
    }
  </script>
  <link rel="stylesheet" href="/static/style.css" />
</head>

<body>  
  <% if(user == null) { %>
    <%- include('partials/loginButton.ejs') %>
  <% } else { %>
    <div class="center">
      <div class="container">
        <h2>
          You're logged in as <%- user.tag %>
        </h2>
      </div>
    </div>
  <% } %>
</body>

</html>