<!Doctype html>
<html>
    <head>
        <title>ShortBot Discord Login</title>
        <style>
          .container {
            display: flex;
            width: 100%;
            padding: 40px 0;
            align-items: center;
            justify-content: center;
          }
          
          .container a, h2 {
            background: #7289DA;
            padding: 0 20px;
            line-height: 35px;
            color: #fff;
            font-family: 'Helvetica', 'Arial', sans-sefir;
            font-size: 20px;
            display: block;
            text-decoration: none;
            border-radius: 3px;
          }
        </style>
    </head>
    <body>
      <% if(user == null) { %>
        <div class="container">
          <a href="/discord/login">Login through discord</a>
        </div>
      <% } else { %>
        <div class="container">
          <h2>
            You're logged in as <%- user.tag %>
          </h2>
        </div>
      <% } %>
    </body>
</html>